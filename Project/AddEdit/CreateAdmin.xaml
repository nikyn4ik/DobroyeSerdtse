<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.AddEdit.CreateAdmin">
    <ScrollView>
        <StackLayout Padding="30">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Image Source="icon.png" WidthRequest="50" HeightRequest="50" VerticalOptions="Center" Margin="0,0,10,0" />
                <Label Text="Волонтёрский отряд &quot;Доброе сердце&quot; СПбГУТ"
                       FontSize="20"
                       TextColor="Black"
                       VerticalOptions="Center"/>
            </StackLayout>
            <VerticalStackLayout>
                <Entry x:Name="UserName" Placeholder="Username"/>
                <Entry x:Name="Email" Placeholder="Email"/>
                <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>
                <Button Text="Create Admin" Clicked="CreateAdminBd"/>
            </VerticalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
